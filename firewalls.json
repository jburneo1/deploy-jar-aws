{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Red",
    "Metadata": {},
    "Parameters": {},
    "Mappings": {},
    "Conditions": {},
    "Resources": {
        "sgMysqlRDS": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security for Mysql RDS",
                "VpcId": {
                    "Fn::ImportValue": "infrastructure-idVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "TCP",
                        "FromPort": "3306",
                        "ToPort": "3306",
                        "CidrIp": {
                            "Fn::ImportValue": "infrastructure-cidrBlockVPC"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "sgMysqlRDS"
                    }
                ]
            }
        },
        "sgBastion": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Security for Mysql RDS",
                "VpcId": {
                    "Fn::ImportValue": "infrastructure-idVPC"
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "TCP",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "sgBastion"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "sgMysqlRDS": {
            "Description": "Database Security Group",
            "Value": {
                "Fn::GetAtt": [
                    "sgMysqlRDS",
                    "GroupId"
                ]
            },
            "Export": {
                "Name": "infrastructure-sgMysqlRDS"
            }
        },
        "sgBastion": {
            "Description": "Security Group EC2 Public Net",
            "Value": {
                "Fn::GetAtt": [
                    "sgBastion",
                    "GroupId"
                ]
            },
            "Export": {
                "Name": "infrastructure-sgBastion"
            }
        }
        
    }

}